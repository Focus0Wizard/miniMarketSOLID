<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@(ViewData["Title"] ?? "Tienda Online")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --brand: #6c5ce7;
            --brand2: #a29bfe;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: .2px;
        }

        .brand-gradient {
            background: linear-gradient(135deg,var(--brand),var(--brand2));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        main {
            padding-block: 1.5rem;
        }

        footer {
            border-top: 1px solid #e9ecef;
            padding-block: 1rem;
            color: #6c757d;
        }

        /* Botón estilo navbar reutilizable */
        .btn-nav {
            border: 1px solid #ced4da;
            color: #212529;
            background: transparent;
        }

            .btn-nav:hover, .btn-nav:focus {
                background: #f8f9fa;
                color: #212529;
            }

        /* Marca activa en el menú */
        .nav-link.active {
            font-weight: 700;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    @{
        var path = Context.Request.Path.Value?.ToLower() ?? "/";
    }
    <nav class="navbar navbar-expand-lg bg-body border-bottom">
        <div class="container">
            <a class="navbar-brand brand-gradient" href="/Index">Tienda Online</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="nav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto gap-2">
                    <li class="nav-item">
                        <a class="nav-link @(path == "/" || path == "/index" ? "active" : "")" href="/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(path.StartsWith("/clientes") ? "active" : "")" href="/Clientes/Index">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(path.StartsWith("/productos") ? "active" : "")" href="/Productos/Index">Productos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="container small d-flex justify-content-between">
        <span>© @DateTime.Now.Year · Tienda Online</span>
        <a href="/Privacy" class="link-secondary">Privacidad</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
