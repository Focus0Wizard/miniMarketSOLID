@page "{id:int}"
@model miniMarketSolid.Pages.Productos.EditarModel
@{
    ViewData["Title"] = "Editar producto";
    var ph = "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='160' height='120'><rect width='100%' height='100%' fill='%23e9ecef'/><text x='50%' y='52%' font-size='14' text-anchor='middle' fill='%236c757d'>Vista previa</text></svg>";
}
<h2>@ViewData["Title"]</h2>

<form method="post" class="row g-3" novalidate>
    <input type="hidden" asp-for="Form.Id" />

    <div class="col-md-4">
        <label asp-for="Form.Nombre" class="form-label"></label>
        <input asp-for="Form.Nombre" class="form-control @(ViewData.ModelState["Form.Nombre"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.Nombre" class="invalid-feedback"></span>
    </div>

    <div class="col-md-8">
        <label asp-for="Form.Descripcion" class="form-label"></label>
        <input asp-for="Form.Descripcion" class="form-control @(ViewData.ModelState["Form.Descripcion"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.Descripcion" class="invalid-feedback"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Form.Precio" class="form-label"></label>
        <input asp-for="Form.Precio" class="form-control @(ViewData.ModelState["Form.Precio"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.Precio" class="invalid-feedback"></span>
    </div>

    <div class="col-md-2">
        <label asp-for="Form.Stock" class="form-label"></label>
        <input asp-for="Form.Stock" class="form-control @(ViewData.ModelState["Form.Stock"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.Stock" class="invalid-feedback"></span>
    </div>

    <div class="col-md-8">
        <label asp-for="Form.ImagenUrl" class="form-label"></label>
        <input asp-for="Form.ImagenUrl" id="urlImg" class="form-control @(ViewData.ModelState["Form.ImagenUrl"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.ImagenUrl" class="invalid-feedback"></span>
        <div class="mt-2">
            <img id="preview"
                 src="@(string.IsNullOrWhiteSpace(Model.Form?.ImagenUrl) ? ph : Model.Form.ImagenUrl)"
                 onerror="this.src='@ph'"
                 alt="preview"
                 class="img-thumbnail" style="width:160px;height:120px;object-fit:cover" />
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-nav" type="submit">Guardar</button>
        <a class="btn btn-outline-secondary" href="/Productos/Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const i=document.getElementById('urlImg'); const p=document.getElementById('preview');
        i.addEventListener('input',()=>{ p.src=i.value||'@ph'; });
    </script>
}
