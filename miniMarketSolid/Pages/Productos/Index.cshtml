@page
@model miniMarketSolid.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Productos";
    var ph = "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='64' height='64'><rect width='100%' height='100%' fill='%23e9ecef'/><text x='50%' y='52%' font-size='12' text-anchor='middle' fill='%236c757d'>IMG</text></svg>";
}
<h1 class="mb-3">Productos</h1>

<p><a class="btn btn-outline-sky" href="/Productos/Crear">Registrar producto</a></p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Img</th>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.ListaProductos)
        {
            <tr>
                <td style="width:72px">
                    <img src="@(string.IsNullOrWhiteSpace(p.ImagenUrl) ? ph : p.ImagenUrl)"
                         onerror="this.src='@ph'"
                         alt="img"
                         class="img-thumbnail"
                         style="width:64px;height:64px;object-fit:cover" />
                </td>
                <td>@p.Id</td>
                <td>@p.Nombre</td>
                <td>@p.Precio</td>
                <td>@p.Stock</td>
                <td class="text-end text-nowrap">
                    <a class="btn btn-sm btn-outline-sky" href="/Productos/Editar/@p.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" href="/Productos/Eliminar/@p.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
