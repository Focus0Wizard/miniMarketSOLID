@page
@model miniMarketSolid.Pages.Catalogo.IndexModel
@{
    ViewData["Title"] = "Catálogo";
}
<h2>Catálogo</h2>

<div class="row row-cols-1 row-cols-md-3 g-3">
    @foreach (var p in Model.Productos)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@p.ImagenUrl" class="card-img-top" style="height:160px;object-fit:cover" alt="@p.Nombre" />
                <div class="card-body">
                    <h5 class="card-title">@p.Nombre</h5>
                    <p class="card-text text-muted">@p.Descripcion</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Bs. @p.Precio</span>
                        <form method="post">
                            <input type="hidden" name="idProducto" value="@p.Id" />
                            <input type="number" name="cantidad" value="1" min="1" class="form-control form-control-sm d-inline" style="width:80px" />
                            <button class="btn btn-sm btn-primary" type="submit">Añadir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<p class="mt-3">
    <a class="btn btn-outline-secondary" href="/Carrito/Detalle">Ver carrito</a>
</p>
