@page
@model miniMarketSolid.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesi칩n";
    var error = TempData["ErrorMessage"] as string;
}

<section class="auth-wrap d-flex align-items-center" style="min-height:75vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-9 col-md-7 col-lg-5">
                <div class="card shadow-soft border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">
                        <h1 class="h3 mb-1">Iniciar Sesi칩n</h1>
                        <p class="text-muted mb-4">Accede para gestionar tu tienda.</p>

                        @if (!string.IsNullOrEmpty(error))
                        {
                            <div class="alert alert-danger" role="alert">@error</div>
                        }

                        <form method="post" class="vstack gap-3">
                            <div>
                                <label for="username" class="form-label small text-uppercase text-muted mb-1">Usuario</label>
                                <input id="username" name="username" class="form-control input-lg"
                                       placeholder="Ingresa tu nombre de usuario" autocomplete="username" required />
                            </div>

                            <div>
                                <label for="password" class="form-label small text-uppercase text-muted mb-1">Contrase침a</label>
                                <input id="password" name="password" type="password" class="form-control input-lg"
                                       placeholder="Ingresa tu contrase침a" autocomplete="current-password" required />
                            </div>

                            <button type="submit" class="btn btn-nav w-100 py-3 fs-5 mt-2" style="border-radius:1rem;">
                                Ingresar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
