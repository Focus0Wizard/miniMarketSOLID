@page "{id:int}"
@model miniMarketSolid.Pages.Clientes.EditarModel
@{
    ViewData["Title"] = "Editar cliente";
}
<h2>@ViewData["Title"]</h2>

<form method="post" class="row g-3" novalidate>
    <input type="hidden" asp-for="Form.IdCliente" />

    <div class="col-md-4">
        <label asp-for="Form.Nombre" class="form-label"></label>
        <input asp-for="Form.Nombre" class="form-control @(ViewData.ModelState["Form.Nombre"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.Nombre" class="invalid-feedback"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Form.Email" class="form-label"></label>
        <input asp-for="Form.Email" class="form-control @(ViewData.ModelState["Form.Email"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.Email" class="invalid-feedback"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Form.Telefono" class="form-label"></label>
        <input asp-for="Form.Telefono" class="form-control @(ViewData.ModelState["Form.Telefono"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="Form.Telefono" class="invalid-feedback"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-nav" type="submit">Guardar</button>
        <a class="btn btn-outline-secondary" href="/Clientes/Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
