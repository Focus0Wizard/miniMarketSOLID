@page "{id:int}"
@model miniMarketSolid.Pages.Clientes.EliminarModel
@{
    ViewData["Title"] = "Eliminar cliente";
}
<h2>@ViewData["Title"]</h2>
<p>¿Seguro que deseas eliminar a <strong>@Model.Cliente?.Nombre</strong> (ID @Model.Cliente?.IdCliente)?</p>

<form method="post" asp-page-handler="Confirmar">
    <input type="hidden" name="id" value="@Model.Cliente?.IdCliente" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-outline-secondary" href="/Clientes/Index">Cancelar</a>
</form>
