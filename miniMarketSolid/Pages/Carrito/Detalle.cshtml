@page
@model miniMarketSolid.Pages.Carritos.DetalleModel
@{
    ViewData["Title"] = "Mi carrito";
}
<h2>Mi carrito</h2>

@if (Model.Items.Count == 0)
{
    <p>No hay productos en tu carrito.</p>
    <a class="btn btn-outline-primary" href="/Catalogo/Index">Ir al catálogo</a>
}
else
{
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th style="width:160px">Cantidad</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td>@i.Producto.Nombre</td>
                    <td>Bs. @i.Producto.Precio</td>
                    <td>
                        <form method="post" asp-page-handler="Cantidad" class="d-flex gap-2">
                            <input type="hidden" name="idProducto" value="@i.Producto.Id" />
                            <input type="number" name="cantidadNueva" value="@i.Cantidad" min="0" class="form-control form-control-sm" />
                            <button class="btn btn-sm btn-outline-primary" type="submit">Actualizar</button>
                        </form>
                    </td>
                    <td>Bs. @(i.Producto.Precio* i.Cantidad)</td>
                    <td>
                        <form method="post" asp-page-handler="Quitar">
                            <input type="hidden" name="idProducto" value="@i.Producto.Id" />
                            <button class="btn btn-sm btn-outline-danger" type="submit">Quitar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <form method="post" asp-page-handler="Vaciar">
            <button class="btn btn-outline-secondary" type="submit">Vaciar carrito</button>
        </form>
        <div class="h5">Total: Bs. @Model.Total</div>
    </div>
}
