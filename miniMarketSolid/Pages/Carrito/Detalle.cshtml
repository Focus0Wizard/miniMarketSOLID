@page
@model miniMarketSolid.Pages.Carritos.DetalleModel
@{
    ViewData["Title"] = "Carrito";
}

<h2 class="mb-4">Carrito</h2>

@if (Model.Items.Count == 0)
{
    <div class="alert alert-info shadow-sm rounded">
        Tu carrito está vacío.
    </div>
    <a class="btn btn-outline-sky" href="/Catalogo/Index">Seguir comprando</a>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-soft rounded-4 overflow-hidden">
            <thead class="table-light">
                <tr>
                    <th>Producto</th>
                    <th class="text-end">Precio</th>
                    <th class="text-center" style="width:160px;">Cantidad</th>
                    <th class="text-end">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model.Items)
                {
                    <tr>
                        <td class="fw-medium">@it.Producto.Nombre</td>
                        <td class="text-end">Bs. @it.Producto.Precio</td>
                        <td class="text-center">
                            <form method="post" asp-page-handler="Cantidad" class="d-inline-flex gap-2">
                                <input type="hidden" name="idProducto" value="@it.Producto.Id" />
                                <input type="number" name="cantidadNueva" value="@it.Cantidad" min="1"
                                       class="form-control form-control-sm text-center" style="width:84px;" />
                                <button class="btn btn-outline-sky" type="submit">Actualizar</button>
                            </form>
                        </td>
                        <td class="text-end">Bs. @it.subtotal</td>
                        <td class="text-end">
                            <form method="post" asp-page-handler="Quitar">
                                <input type="hidden" name="idProducto" value="@it.Producto.Id" />
                                <button class="btn btn-sm btn-outline-danger">Quitar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-12 col-lg-6">
            <a class="btn btn-outline-sky" href="/Catalogo/Index">Seguir comprando</a>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card shadow-soft border-0 rounded-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span>Subtotal</span>
                        <strong>Bs. @Model.Subtotal</strong>
                    </div>

                    @if (Model.Descuentos.Any())
                    {
                        <hr />
                        <div class="mb-2">
                            @foreach (var d in Model.Descuentos)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="badge bg-success">@d.Etiqueta</span>
                                    <span class="text-success">- Bs. @d.Monto</span>
                                </div>
                            }
                        </div>
                    }

                    <hr />
                    <div class="d-flex justify-content-between fs-5">
                        <span class="fw-semibold">Total</span>
                        <strong>Bs. @Model.Total</strong>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <form method="post" asp-page-handler="Vaciar">
                            <button class="btn btn-outline-danger" type="submit">Vaciar carrito</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5"></div>
}

@section Scripts {
    <style>
        .btn-cart {
            background-color: #4dabf7;
            color: #fff;
            border-radius: 10px;
            padding: 6px 16px;
            transition: background-color 0.25s ease-in-out, transform 0.15s ease-in-out;
        }

            .btn-cart:hover {
                background-color: #339af0;
                transform: translateY(-2px);
            }
    </style>
}
